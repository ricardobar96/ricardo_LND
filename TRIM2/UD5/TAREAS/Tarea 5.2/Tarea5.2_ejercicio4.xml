    <forma_estructura>
      <copa>Copa irregular</copa>
      <tronco>Tronco principal irregular con bifurcaciones</tronco>
      <ramaje>Ramaje tortuoso</ramaje>
    </forma_estructura>
    <color estacion="primavera">Haz verde oscuro, envés verde plateado</color>
    <resistencia_heladas>
      <temperatura>Heladas medias (hasta -10ºC)</temperatura>
      <especie>Platanus orientalis</especie>
    </resistencia_heladas>
  </arbol>
  <arbol>
    <nombre_comun>Plátano</nombre_comun>
    <vegetacion>Caducifolio</vegetacion>
    <altura>De 20 a 25 metros</altura>
    <forma_estructura>
      <copa>Copa ovoidal</copa>
      <tronco>Tronco principal recto</tronco>
      <ramaje>Ramaje expandido</ramaje>
    </forma_estructura>
    <color estacion="otoño">Ocre</color>
    <resistencia_heladas>
      <temperatura>Heladas fuertes (hasta -20ºC)</temperatura>
      <especie>Quercus ilex</especie>
    </resistencia_heladas>
  </arbol>
  <arbol>
    <nombre_comun>Encina</nombre_comun>
    <vegetacion>Perenne</vegetacion>
    <altura>En torno a 25 metros</altura>
    <forma_estructura>
      <copa>Copa esférica o elíptica irregular</copa>
      <tronco>Tronco principal recto</tronco>
      <ramaje>Ramaje tortuoso</ramaje>
    </forma_estructura>
    <color estacion="primavera">Plateado en hojas jóvenes. En hojas antiguas, haz verde oscuro, envés plateado</color>
    <resistencia_heladas>
      <temperatura>Heladas fuertes (hasta -15ºC)</temperatura>
      <especie></especie>
    </resistencia_heladas>
