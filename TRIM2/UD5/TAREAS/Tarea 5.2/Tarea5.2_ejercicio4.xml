<acer_monspessulanum>
  <arbol>
    <nombre_comun>Arce de Montpellier, Arce menor</nombre_comun>
    <vegetacion>Caducifolio</vegetacion>
    <altura>De 6 a 10 metros</altura>
    <forma_estructura>
      <copa>Copa esférica</copa>
      <tronco>Tronco principal recto con bifurcaciones</tronco>
      <ramaje>Ramaje colgante</ramaje>
    </forma_estructura>
    <color estacion="primavera">Haz verde brillante, envés verde blanquecino</color>
    <resistencia_heladas>
      <temperatura>Heladas fuertes (hasta -15ºC)</temperatura>
      <especie>Olea europea</especie>
    </resistencia_heladas>
  </arbol>
  <arbol>
    <nombre_comun>Olivo</nombre_comun>
    <vegetacion>Perenne</vegetacion>
